---
import '@fontsource/montserrat';
import '@fontsource/montserrat/800.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, heroImage },
} = Astro.props;
---

<html lang="en">
	<head>
    <meta charset="utf-8">
    <title>About</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	<body class="font-Montserrat">
    <div class="flex flex-col container h-screen m-0">
      <Header />
      <article class="flex flex-col items-center mt-16 space-y-3">
        <h1 class="text-2xl font-semibold">{title}</h1>
        {pubDate && <time class="text-xs border-primary-500 border rounded-2xl px-3 py-1">{pubDate}</time>}
        {heroImage && (
          <img
            width={720}
            height={360}
            src={heroImage}
            alt=""
          />
        )}
        <div class="text-tertiary-600 text-sm text-start">
          <slot />
        </div>
      </article>
    </div>
    <Footer />
	</body>
</html>
